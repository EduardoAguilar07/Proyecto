@model IEnumerable<MiSeguridadMVC.Models.Recursos>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Recursos y Salones</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.disponibilidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaPrime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaEntrega)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
